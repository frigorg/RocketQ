<div class="container">
    <section class="sign-in">
        <h2>Crie sua própria sala</h2>
        <form action="/create-room" method="POST">
            <label class="sr-only" for="room-id">Código da sala</label>
            <input class="form input-area" id="room-password" name="password" type="password" placeholder="Insira uma senha" required>
            <button class="btn btn_normal">
                <i class="icon-login"></i>
                Criar sala
            </button>
        </form>
    </section>
</div>